@model InventarioWeb.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="row justify-content-center mt-5 animate__animated animate__fadeInDown">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-primary text-white text-center rounded-top">
                <h3 class="mb-0">🔐 Sistema de Inventario</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="NombreUsuario" class="form-control" placeholder="Usuario" />
                        <label asp-for="NombreUsuario">👤 Usuario</label>
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Contraseña" type="password" class="form-control" placeholder="Contraseña" />
                        <label asp-for="Contraseña">🔑 Contraseña</label>
                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-lg btn-primary shadow-sm">
                            Ingresar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
