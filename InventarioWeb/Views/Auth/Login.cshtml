@model InventarioWeb.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="row justify-content-center mt-5 animate__animated animate__fadeInDown">
    <div class="col-md-5">
        <div class="card login-card shadow-lg border-0 rounded-4">
            <div class="card-header text-center login-header">
                <img src="~/img/logo-eje.png" alt="EJE" class="login-logo mb-2" />
                <h3 class="mb-0">Sistema de Inventario</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light border-0">
                            <i class="bi bi-person-circle text-primary"></i>
                        </span>
                        <input asp-for="NombreUsuario" class="form-control login-input" placeholder="Usuario" />
                    </div>
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>

                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light border-0">
                            <i class="bi bi-lock-fill text-success"></i>
                        </span>
                        <input asp-for="Contraseña" type="password" class="form-control login-input" placeholder="Contraseña" />
                    </div>
                    <span asp-validation-for="Contraseña" class="text-danger"></span>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-lg login-btn">
                            Ingresar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<link href="~/css/login.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
