@model InventarioWeb.Models.MaterialesResponse

@{
    ViewData["Title"] = "Inventario";
    Layout = "_Layout";
}

@if (Model == null)
{
    <div class="alert alert-warning shadow-sm animate__animated animate__fadeIn" role="alert">
        ❌ No se pudieron cargar los materiales.
        <a href="@Url.Action("Login", "Auth")" class="alert-link">Inicie sesión nuevamente</a>.
    </div>
    return;
}

<div class="container-fluid animate__animated animate__fadeIn">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <h2 class="fw-bold">📦 Materiales en Inventario</h2>
            <p class="text-muted">@Model.Mensaje</p>
        </div>
        <div class="col-md-6 text-end">
            <span class="badge bg-info me-2">👤 @Model.Usuario</span>
            <span class="badge bg-secondary me-2">🔑 @Model.Rol</span>
            @if (!string.IsNullOrEmpty(Model.LocalAsignado))
            {
                <span class="badge bg-success">📍 @Model.LocalAsignado</span>
            }
        </div>
    </div>

    <!-- 🔎 Filtros y búsqueda -->
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <form method="get" class="row g-2 align-items-center">
                <div class="col-md-3">
                    <select name="local" class="form-select" onchange="this.form.submit()">
                        <option value="">🌍 Todos los locales</option>
                        @foreach (var local in ViewBag.Locales)
                        {
                            <option value="@local" selected="@(ViewBag.SelectedLocal == local ? "selected" : null)">
                                @local
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="pageSize" class="form-select" onchange="this.form.submit()">
                        <option value="10" selected="@(ViewBag.PageSize == 10 ? "selected" : null)">10</option>
                        <option value="50" selected="@(ViewBag.PageSize == 50 ? "selected" : null)">50</option>
                        <option value="100" selected="@(ViewBag.PageSize == 100 ? "selected" : null)">100</option>
                    </select>
                </div>
                <div class="col-md-5">
                    <input type="text" name="search" class="form-control" placeholder="🔍 Buscar material..." value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100 shadow-sm">
                        Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- 📋 Tabla de materiales -->
    @if (Model.Materiales == null || !Model.Materiales.Any())
    {
        <div class="alert alert-info shadow-sm animate__animated animate__fadeIn" role="alert">
            ℹ️ No se encontraron materiales con los filtros aplicados.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded animate__animated animate__fadeInUp">
            <table class="table table-hover align-middle">
                <thead class="table-dark sticky-top">
                    <tr>
                        <th>ID</th>
                        <th>Material</th>
                        <th>Descripción</th>
                        <th>Almacén</th>
                        <th>Lote</th>
                        <th>Cantidad</th>
                        <th>Conteo</th>
                        <th>Reconteo</th>
                        <th>Fecha Registro</th>
                        <th>Observaciones</th>
                        <th>Local</th>
                        <th>UMB</th>
                        <th>Parihuela</th>
                        <th>Ubicación</th>
                        <th>Fecha</th>
                        <th>Cuenta</th>
                        <th>Usuario</th>
                        <th>Fecha Sistema</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var material in Model.Materiales)
                    {
                        <tr>
                            <td>@material.Id</td>
                            <td class="fw-bold">@material.MaterialCod</td>
                            <td>@material.Descripcion</td>
                            <td>@material.Almacen</td>
                            <td>@material.Lote</td>
                            <td><span class="badge bg-light text-dark">@material.Cantidad</span></td>
                            <td>@material.Conteo</td>
                            <td>@material.Reconteo</td>
                            <td>@material.FecReg?.ToString("dd/MM/yyyy")</td>
                            <td>@material.Obs</td>
                            <td>@material.Local</td>
                            <td>@material.Umb</td>
                            <td>@material.Parihuela</td>
                            <td>@material.Ubicacion</td>
                            <td>@material.Fec?.ToString("dd/MM/yyyy")</td>
                            <td>@material.Cta</td>
                            <td>@material.Usuario</td>
                            <td>@material.FecSys?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="badge @(material.Estado == "ACTIVO" ? "bg-success" : "bg-danger")">
                                    @material.Estado
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- 📑 Paginación -->
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @if (Model.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.Page - 1, pageSize = ViewBag.PageSize, local = ViewBag.SelectedLocal, search = ViewBag.SearchTerm })">
                            ⬅️ Anterior
                        </a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize, local = ViewBag.SelectedLocal, search = ViewBag.SearchTerm })">
                            @i
                        </a>
                    </li>
                }

                @if (Model.Page < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.Page + 1, pageSize = ViewBag.PageSize, local = ViewBag.SelectedLocal, search = ViewBag.SearchTerm })">
                            Siguiente ➡️
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <div class="text-center mt-2">
            <small class="text-muted">
                Mostrando <b>@Model.Materiales.Count</b> de <b>@Model.TotalCount</b> registros (Página @Model.Page de @Model.TotalPages)
            </small>
        </div>
    }
</div>

<!-- Animaciones CSS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
