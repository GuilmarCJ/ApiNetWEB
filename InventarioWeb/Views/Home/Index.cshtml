@model InventarioWeb.Models.MaterialesResponse

@{
    ViewData["Title"] = "Inventario";
    Layout = "_Layout";
}

@if (Model == null)
{
    <div class="alert alert-warning" role="alert">
        No se pudieron cargar los materiales. Por favor, <a href="@Url.Action("Login", "Auth")">inicie sesión nuevamente</a>.
    </div>
    return;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Materiales en Inventario</h2>
            <p class="text-muted">@Model.Mensaje</p>
        </div>
        <div class="col-md-6 text-end">
            <span class="badge bg-info">Usuario: @Model.Usuario</span>
            <span class="badge bg-secondary">Rol: @Model.Rol</span>
            @if (!string.IsNullOrEmpty(Model.LocalAsignado))
            {
                <span class="badge bg-success">Local: @Model.LocalAsignado</span>
            }
        </div>
    </div>

    <!-- Filtros y Búsqueda -->
    <div class="row mb-3">
        <div class="col-md-8">
            <form method="get" class="row g-2">
                <div class="col-md-3">
                    <select name="local" class="form-select" onchange="this.form.submit()">
                        <option value="">Todos los locales</option>
                        @foreach (var local in ViewBag.Locales)
                        {
                            <option value="@local" selected="@(ViewBag.SelectedLocal == local ? "selected" : null)">@local</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="pageSize" class="form-select" onchange="this.form.submit()">
                        <option value="10" selected="@(ViewBag.PageSize == 10 ? "selected" : null)">10</option>
                        <option value="50" selected="@(ViewBag.PageSize == 50 ? "selected" : null)">50</option>
                        <option value="100" selected="@(ViewBag.PageSize == 100 ? "selected" : null)">100</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control" placeholder="Buscar..." value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Buscar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de materiales COMPLETA -->
    @if (Model.Materiales == null || !Model.Materiales.Any())
    {
        <div class="alert alert-info" role="alert">
            No se encontraron materiales con los filtros aplicados.
        </div>
    }
    else
    {
        <div class="table-responsive" style="font-size: 0.85rem;">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Material</th>
                        <th>Descripción</th>
                        <th>Almacén</th>
                        <th>Lote</th>
                        <th>Cantidad</th>
                        <th>Conteo</th>
                        <th>Reconteo</th>
                        <th>Fecha Registro</th>
                        <th>Observaciones</th>
                        <th>Local</th>
                        <th>UMB</th>
                        <th>Parihuela</th>
                        <th>Ubicación</th>
                        <th>Fecha</th>
                        <th>Cuenta</th>
                        <th>Usuario</th>
                        <th>Fecha Sistema</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var material in Model.Materiales)
                    {
                        <tr>
                            <td>@material.Id</td>
                            <td>@material.MaterialCod</td>
                            <td>@material.Descripcion</td>
                            <td>@material.Almacen</td>
                            <td>@material.Lote</td>
                            <td>@material.Cantidad</td>
                            <td>@material.Conteo</td>
                            <td>@material.Reconteo</td>
                            <td>@material.FecReg?.ToString("dd/MM/yyyy")</td>
                            <td>@material.Obs</td>
                            <td>@material.Local</td>
                            <td>@material.Umb</td>
                            <td>@material.Parihuela</td>
                            <td>@material.Ubicacion</td>
                            <td>@material.Fec?.ToString("dd/MM/yyyy")</td>
                            <td>@material.Cta</td>
                            <td>@material.Usuario</td>
                            <td>@material.FecSys?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="badge @(material.Estado == "ACTIVO" ? "bg-success" : "bg-warning")">
                                    @material.Estado
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Paginación -->
        <nav>
            <ul class="pagination">
                @if (Model.Page > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.Page - 1, pageSize = ViewBag.PageSize, local = ViewBag.SelectedLocal, search = ViewBag.SearchTerm })">
                            Anterior
                        </a>
                    </li>
                }

                @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                {
                    <li class="page-item @(i == Model.Page ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i, pageSize = ViewBag.PageSize, local = ViewBag.SelectedLocal, search = ViewBag.SearchTerm })">
                            @i
                        </a>
                    </li>
                }

                @if (Model.Page < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.Page + 1, pageSize = ViewBag.PageSize, local = ViewBag.SelectedLocal, search = ViewBag.SearchTerm })">
                            Siguiente
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <div class="row">
            <div class="col-md-12">
                <p>Mostrando @Model.Materiales.Count de @Model.TotalCount registros (Página @Model.Page de @Model.TotalPages)</p>
            </div>
        </div>
    }
</div>

<style>
    .table-responsive {
        max-height: 70vh;
        overflow-y: auto;
    }

    .table th {
        position: sticky;
        top: 0;
        background: #343a40;
        z-index: 10;
    }
</style>